---
import { Image } from "astro:assets";
import type { Image as ImageType } from "../data/images";

interface Props {
  image: ImageType;
}

const { image } = Astro.props;
---

<a
  href={`/image/${image.id}`}
  class="gallery-item"
  transition:name={`image-${image.id}`}
>
  <Image
    src={image.src}
    alt={image.title}
    width={image.width}
    height={image.height}
  />
  <div class="image-title">{image.title}</div>
</a>

<style>
  .gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    transition: transform 0.2s;
    text-decoration: none;
  }

  .gallery-item:hover {
    transform: scale(1.02);
  }

  .gallery-item img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .image-title {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    color: white;
  }
</style>
